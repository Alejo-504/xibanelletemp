<div  id="categories-section" class="container-fluid  py-5 color-{{ section.settings.scheme_selector }}">
  <div class="page-width" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px;">
    {% for block in section.blocks %}
    <div class="category-card" style="display: flex;  align-items: center; {% if  forloop.index == 2 %} flex-direction: column-reverse; {% else %} flex-direction: column; {% endif %}">
      <div class="category-image" style="background-image: url('{{ block.settings.image | img_url: '1024x' }}'); width: 100%; height: 200px; background-size: cover; background-position: center; display: flex; justify-content: center; align-items: center;">
        <i class="fa {{ block.settings.icon }}" style="font-size: 24px; color: white;"></i>
      </div>
      <div class="category-info" style="background-color: #f7f7f7; padding: 20px; text-align: center; width: 100%;">
        <h3 class="category-title" style="margin: 15px 0;">{{ block.settings.title }}</h3>
        <a href="{{ block.settings.link }}" class="category-btn" style="padding: 10px 15px; background-color: #d3ad5d; color: white; text-decoration: none; border: none; cursor: pointer;">{{ block.settings.button_text }}</a>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
<style>
  #categories-section{
    background: rgb(var(--color-background-4));
    color: rgb(var(--color-foreground_3));
  }
</style>

{% schema %}
{
  "name": "Custom Categories Grid",
  "max_blocks": 3,
  "settings":[
    {
        "type": "color_scheme",
        "id": "scheme_selector",
        "label": "Scheme"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Category Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "View Products"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "fa-camera",
              "label": "Camera"
            },
            {
              "value": "fa-heart",
              "label": "Heart"
            },
            {
              "value": "fa-shopping-bag",
              "label": "Shopping Bag"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Categories Grid",
      "category": "Custom Content"
    }
  ]
}
{% endschema %}