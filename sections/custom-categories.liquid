<section id="categories-section" class="container mt-5">
  <div class="row">
    {% for block in section.blocks %}
    <div class="col-md-4 d-flex flex-column align-items-center">
      <div class="category-image d-flex justify-content-center align-items-center" style="background-image: url('{{ block.settings.image | img_url: '1024x' }}');">
        <i class="fa {{ block.settings.icon }}"></i>
      </div>
      <div class="category-info text-center mt-3">
        <h3 class="category-title">{{ block.settings.title }}</h3>
        <a href="{{ block.settings.link }}" class="btn btn-primary">{{ block.settings.button_text }}</a>
      </div>
    </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Custom Categories",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Category Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "View Products"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "fa-camera",
              "label": "Camera"
            },
            {
              "value": "fa-heart",
              "label": "Heart"
            },
            {
              "value": "fa-shopping-bag",
              "label": "Shopping Bag"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Categories",
      "category": "custom"
    }
  ]
}
{% endschema %}

<style>
  #categories-section .category-image {
    width: 100%;
    height: 200px;
    background-size: cover;
    background-position: center;
  }
  #categories-section .category-info {
    background-color: #f7f7f7;
    padding: 20px;
    width: 100%;
  }
  #categories-section .category-title {
    margin-bottom: 15px;
  }
  #categories-section .btn-primary {
    background-color: #d3ad5d;
    border-color: #d3ad5d;
  }
</style>