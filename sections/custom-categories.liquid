<div id="categories-section" class="container-fluid py-5 color-{{ section.settings.scheme_selector }}">
  <div class="row page-width">
    {% for block in section.blocks %}
    <div class="col-md-4 ">
      <div class="card d-flex {% if forloop.index == 2 %}flex-column-reverse{% else %} flex-column{% endif %} align-items-center">
        <div class="category-image w-100 d-flex justify-content-center align-items-center" style="background-image: url('{{ block.settings.image | img_url: '1024x' }}'); height: 200px; background-size: cover; background-position: center;">
          <i class="fa {{ block.settings.icon }}" style="font-size: 24px; color: white;"></i>
        </div>
        <div class="category-info text-center" style="background-color: #f7f7f7; padding: 20px; width: 100%;">
          <h3 class="category-title" style="margin: 15px 0;">{{ block.settings.title }}</h3>
          <a href="{{ block.settings.link }}" class="btn btn-primary">{{ block.settings.button_text }}</a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
<style>
  #categories-section{
    background: rgb(var(--color-background-4));
    color: rgb(var(--color-foreground_3));
    
  }
  #categories-section .btn-primary{
    background: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
  }
  #categories-section .card{
    box-shadow: -2px 1px 3px 1px #9595951f;
    gap:15px;
  }
</style>

{% schema %}
{
  "name": "Custom Categories Grid",
  "max_blocks": 3,
  "settings":[
    {
        "type": "color_scheme",
        "id": "scheme_selector",
        "label": "Scheme"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Category Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "View Products"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "fa-camera",
              "label": "Camera"
            },
            {
              "value": "fa-heart",
              "label": "Heart"
            },
            {
              "value": "fa-shopping-bag",
              "label": "Shopping Bag"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Categories Grid",
      "category": "Custom Content"
    }
  ]
}
{% endschema %}