{% schema %}
  {
    "name": "Custom About",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "About"
      },
      {
        "type": "richtext",
        "id": "about",
        "label": "About",
        "default": "<p>Enter your about text here.</p>"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link Text",
        "default": "Learn More"
      }
    ],
    "presets": [
      {
        "name": "Custom About",
        "category": "Custom"
      }
    ]
  }
{% endschema %}

<div class="custom-about container-fluid position-relative">
  <div class="row page-width">
    <div class="col-12 col-md-6">
      <h2>{{ section.settings.title }}</h2>
      {{ section.settings.about }}
      <a href="{{ section.settings.link }}" class="btn btn-primary">{{ section.settings.link_text }}</a>
    </div>
    <div class="col-12 col-md-6 d-flex align-items-center" style="height: 450px;">
      <div class="container-image position-absolute px-0">
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.title }}">
      </div>
    </div>
  </div>
</div>

<style>
  .container-image{
    right: -15px;
    height: 400px;
    width: 400px;
    box-shadow: 0 0 20px rgba(0,0,0,0.5);
    transform: rotate(15deg);
  }
  .custom-about{
    padding: 100px 0;
  }
  .custom-about h2{
    font-size: 2.5rem;
    margin-bottom: 30px;
  }
  .custom-about p{
    font-size: 1.2rem;
    margin-bottom: 30px;
  }
  .container-image img{
    width: 100%;
    height: 100%;
    object-fit: cover;

  }
</style>