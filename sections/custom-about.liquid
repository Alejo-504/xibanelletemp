{% schema %}
  {
    "name": "Custom About",
    "settings": [
       {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "About"
      },
      {
        "type": "richtext",
        "id": "about",
        "label": "About",
        "default": "<p>Enter your about text here.</p>"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link Text",
        "default": "Learn More"
      }
      
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom About",
        "category": "Custom"
      }
    ]
  }
{% endschema %}

<div class="custom-about container-fluid position-relative color-{{ section.settings.color_scheme }}" style="background:rgb(var(--color-background-3));color:rgb(var(--color-foreground_3))">
  <div class="row page-width">
    <div class="col-12 col-md-6 d-flex align-items-md-start align-items-center flex-column justify-content-evenly">
      <h2>{{ section.settings.title }}</h2>
      {{ section.settings.about }}
      <a href="{{ section.settings.link }}" class="btn btn-primary hero d-md-block d-none">{{ section.settings.link_text }}</a>
    </div>
    <div class="col-12 col-md-6 d-flex align-items-center" style="height: 450px;">

          {%  render "custom-carousel-double", blocks: section.blocks, height:400 %}
     
    </div>
  </div>
  <div class="row page-width d-md-none d-block">
    <div class="col-12 d-flex justify-content-center">
      <a href="{{ section.settings.link }}" class="btn btn-primary hero">{{ section.settings.link_text }}</a>
    </div>
  </div>
</div>

<style>
 
  .custom-about{
    padding: 50px 0;
    overflow-x:hidden;
  }

@media (max-width: 767px) {
  .custom-about{
    text-align:center;
  }
  .custom-about h2{
    margin-bottom: 20px;
    text-align:center;
  }
}
</style>