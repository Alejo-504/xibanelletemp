
{% schema %}
  {
    "name": "Custom Testimonial",
    "settings": [
      {
        "type": "color_scheme",
        "id": "scheme_selector",
        "label": "Scheme Number"
      },
       {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "What Our Customer Say"
      },
       {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle",
            "default": "Lorem ipsum dolor sit amet consectetur. Mi eros nunc orci facilisi urna. Eu est mi diam odio blandit."
        },
      {
            "type": "text",
            "id": "link_text",
            "label": "Text Button",
            "default": "View More"
      },
       {
            "type": "url",
            "id": "link_url",
            "label": "Link"
      }
    ],
    "blocks": [
      {
        "type": "testimonial",
        "name": "Testimonial",
        "settings": [
          {
            "type": "text",
            "id": "author",
            "label": "Author Name",
            "default": "Alexandro Sams√≥in"
          },
          {
            "type": "text",
            "id": "location",
            "label": "Location",
            "default": "Las Vegas, Montana"
          },
          {
            "type": "textarea",
            "id": "quote",
            "label": "Quote",
            "default": "Lorem ipsum dolor sit amet consectetur. Maecenas lacus dui integer et tempor sodales varius vulputate elementum. Neque quam."
          },
          {
            "type": "range",
            "id": "rating",
            "label": "Rating",
            "min": 1,
            "max": 5,
            "step": 0.1,
            "default": 4.8
          },
          {
            "type": "image_picker",
            "id": "avatar",
            "label": "Avatar"
          }
        ]
      },
      {
          "type": "Video",
          "name": "Video",
          "settings": [
            {
              "type": "text",
              "id": "name_costumer",
              "label": "Title",
              "default": "Jhon Doe"
            },
            {
              "type": "url",
              "id": "link_video",
              "label": "Link Video" 
            },
            {
            "type": "range",
            "id": "rating",
            "label": "Rating",
            "min": 1,
            "max": 5,
            "step": 0.1,
            "default": 4.8
          },
          {
            "type": "image_picker",
            "id": "avatar",
            "label": "Avatar"
          }
          ]
          }
    ],
    "presets": [
      {
        "name": "Custom Testimonials",
        "category": "custom"
      }
    ]
  }
  {% endschema %}
  
  <section class="testimonials section color-{{ section.settings.scheme_selector }} py-5">
    <div class="container">
      <div class="row">
        <div class="col-12 text-center">
          <h2>{{ section.settings.title }}</h2>
          <p>{{ section.settings.subtitle }}</p>
        </div>
      </div>
      <div class="owl-carousel owl-theme py-5">
        {% for block in section.blocks %}
          {% if block.type == 'testimonial' %} 
          <div class="item">
            <div class="testimonial p-4">
              <div class="testimonial-rating">
               
                <div class="header-card d-flex pb-5 justify-content-between">
                  <div class="d-flex gap-3">
                    <div class="testimonial-avatar circle">
                      {%  if block.settings.avatar %}
                      <img src="{{ block.settings.avatar | img_url: '60x60' }}" alt="{{ block.settings.author }}" width="60" height="60">
                      {% else %}
                        <i class="fa fa-user"></i>
                      {% endif %}
                    </div>
                    <div class="d-flex flex-column align-items-start">
                      <span>{{ block.settings.author }}</span>
                      <small>{{ block.settings.location }}</small>
                    </div>
                  </div>
                  <span class="stars d-flex align-items-center gap-2">
                      {% assign rating = block.settings.rating | round: 1 %}
                      <span class="fa fa-star checked" style="color:#efc80a"></span>
                      <span>{{ rating }}</span>
                    </span>
                </div>
              </div>
              <div class="p-4 d-flex justify-content-center flex-column" style="font-size:14px;">
                <p>"{{ block.settings.quote }}"</p>
              </div>
            </div>
          </div>
          {% elsif block.type == "Video" %}
            <div class="item position-relative">
                <div class="testimony-wrap testimonial p-0 position-relative">

                     <div class="container-video radius d-flex align-items-center justify-content-center" style="width:100%;height:100%;">
                        <video style="object-fit:cover; width:100%;height:100%;min-height:265px;display:block!important;" playsinline src="{{ block.settings.link_video }}" ></video>
                        <i class="playBtn fa fa-play text-primary-light" style="font-size:60px;"></i>
                    </div>
          
               </div>
            </div>

          {% endif %}
        {% endfor %}
      </div>
      <div class="text-center">
        <a href="{{ section.settings.link_url }}" class="btn btn-primary">{{ section.settings.link_text }}</a>
      </div>
    </div>
  </section>

  <script>
  document.addEventListener("DOMContentLoaded", function(){
          $(".testimonials .owl-carousel").owlCarousel({
            items: 3,
            margin: 30,
            loop: true,
            autoplay: true,
            autoplayTimeout: 3000,
            autoplayHoverPause: true,
            dots: true,
            responsive : {
              0 : { items: 1 },
              768 : { items: 2 },
              992 : { items: 3 }
            }
          });
    
        //crear un script que importe fancybox y abra el video al hacer click en playBtn
        $(".playBtn").click(function(){
       
      
          let video = $(this).parent().find("video");

          let script = document.createElement("script");
          let css = document.createElement("link");
          css.rel = "stylesheet";
          css.href = "https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.css";
          script.id = "fancybox";
          if(!document.getElementById("fancybox")){
            script.src = "https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js";
           
              script.onload = function(){
                $.fancybox.open({
                  src: video,
                  type: 'inline',
                  opts: {
                    iframe: {
                      css: {
                        width: '100%',
                        height: '100%',
                        objectFit: 'cover'
                      }
                    }
                  }
                });
              }
              document.head.appendChild(css);
              document.body.appendChild(script);
          }else{
            $.fancybox.open({
              src: video,
              type: 'inline',
              opts: {
                iframe: {
                  css: {
                    width: '100%',
                    height: '100%',
                    objectFit: 'cover'
                  }
                }
              }
            });
          }
        });

    });
  </script>
    <style>
      .fancybox-container{
        z-index: 99999999999999;
      }
      .fancybox-bg, .fancybox-inner, .fancybox-outer, .fancybox-stage{
        background:#00000070 !important;
      }
      .playBtn:hover, .playBtn-off:hover {
        transform: scale(1.3);
      }
      .playBtn, .playBtn-off {
        opacity: 0.8;
        transition: transform 0.2s ease-in-out;
        position: absolute;
        width: 60px;
        height: 70px;
        /*background-image: url("../playBtn.png");*/
        background-size: contain;
        background-repeat: no-repeat;
        transform: scale(1.5);
        background-position: center;
        border: none;
        outline: none;
        background-color: transparent;
        z-index: 4;
      
          font-size: 75px;
          cursor:pointer;
            display: flex;
          align-items: center;
          justify-content: center;
      }
      
      .name-video{
             position: absolute;
          top: 0;
          z-index: 10;
          width: 47%;
          height: 80px;
          transform: scale(-1);
          display: flex;
          align-items: center;
          justify-content: center;
          flex-direction: column;
          line-height: 1.1;
      }
      
      .name-video .name{
          font-weight: 500;
          font-size: 22px;
          margin-bottom: 0;
          color: var(--primary);
      }
      .name-video span{
          font-size: 16px;
          color: var(--tertiary);
      }
      .testimonials.section {
        background: rgb(var(--color-background-3));
        color:rgb(var(--color-foreground_3));
      }
      .testimonials.section h2{
         color:rgb(var(--color-foreground_3));
      }
      .testimonial{
        background:rgb(var(--color-background));
        color: rgb(var(--color-foreground));
        min-height:265px;
      }
      .circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        overflow: hidden;
      }
      .testimonial-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .testimonial-avatar{
        background: rgb(var(--color-background-2));
        display: flex;
        align-items: center;
        justify-content: center;
  
      }
      .testimonial-avatar i{
        font-size: 30px;
        color: white;
      }
      .testimonials .owl-dots {
        display: flex !important;
        justify-content: center;
      }
    </style>
  
  