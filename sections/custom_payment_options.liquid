{% endschema %}

{% if shop.enabled_payment_types.size > 0 %}
<div class="payment-methods">
  {% for type in shop.enabled_payment_types %}
  <div class="payment-method">
    <span class="fa fa-{{ type | handleize }}"></span>
    <p>{{ type | replace: '_', ' ' | capitalize }}</p>
  </div>
  {% endfor %}
</div>
{% endif %}