{% schema %}
  {
    "name": "Custom Show Payment",
    "blocks": [
      {
        "type": "payment_method",
        "name": "MÃ©todo de Pago",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "Title",
            "label": "Title"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Show Payment",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}
  <div class="text-center payment_methods py-5 container-fluid">
    <h2 class="pb-5 adorno adorno-left adorno-right" style="color:rgb(var(--color-foreground_3))">Available payment methods</h2>
    <div class="row page-width justify-content-center">
      {% for block in section.blocks %}
        <div class="col-md-3">
          <div class="payment-method d-flex flex-column align-items-center">
            <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.Title }}">
            <h3>{{ block.settings.Title }}</h3>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <style>
    .payment_methods {
      background-color: white;
      min-height: calc(100vh - 784px);
    }
    .payment-method {
      padding: 20px;
      background-color: rgb(var(--color-background_2));
      border-radius: 10px;
      margin-bottom: 20px;
      transition: all 0.3s ease-in-out;
      
    }
    .payment-method img {
      width: 100px;
      height: 100px;
      object-fit: contain;
    }
    .payment-method h3 {
      color: rgb(var(--color-foreground_3));
      font-size: 20px;
      font-weight: 600;
      margin-top: 10px;
    } 
    .payment-method:hover {
      transform: scale(1.05) translateY(-10px) translateZ(0) rotate(0.5deg);
    }

  </style>