{% schema %}
{
  "name": "Custom Show Payment",
  "blocks": [
    {
      "type": "payment_method",
      "name": "Método de Pago",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Custom Show Payment",
      "category": "Custom"
    }
  ]
}
{% endschema %}
<div class="text-center">
  <h2>Métodos de Pago</h2>
  <div class="row">
    {% for block in section.blocks %}
    <div class="col">
      <img src="{{ block.settings.image | img_url }}" alt="Método de Pago">
    </div>
    {% endfor %}
  </div>
</div>