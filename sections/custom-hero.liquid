
{% stylesheet %}
.section-hero {
    padding: 50px 0;
    height: calc(100vh - 160px);
}
  @media screen and (max-width: 768px){
    .section-hero {
      height: auto;
    }
  }

.section-hero h1 {
  font-size: 3rem; /* Adjust font size as needed */
  margin-bottom: 20px;
}

.section-hero p {
  font-size: 2rem;
  margin-bottom: 30px;
}

.hero-image-placeholder {
  position: relative;
  height: 400px;
  background-color: #C8D6CA;
}

.image-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100px; /* Adjust width as needed */
  height: 100px; /* Adjust height as needed */
  background: url('path-to-your-icon.png') no-repeat center center;
  background-size: contain;
}

.badge-new-collection {
  position: absolute;
  bottom: -25px; /* Adjust as needed */
  left: 50%;
  transform: translateX(-50%);
  background-color: #fff;
  border-radius: 50%;
  width: 150px; /* Adjust as needed */
  height: 150px; /* Adjust as needed */
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 0.9rem;
}

.btn-group .btn {
  margin-right: 10px;
}

/* Clear the margin for the last button */
.btn-group .btn:last-child {
  margin-right: 0;
}

/* Adjustments for responsiveness */
@media (max-width: 768px) {
  .hero-image-placeholder {
    margin-top: 30px;
  }

  .badge-new-collection {
    position: static;
    transform: none;
    margin: 20px auto;
  }
}
{% endstylesheet %}

<section class="section-hero color-{{ section.settings.scheme_selector }} d-flex align-items-center position-relative">
  <div class="container-fluid page-width">
    <div class="row">
      <div class="col-md-6 my-auto pe-md-4">
        <h1>Lorem Ipsum Dolor Sit Amet Consectetur. Tempus Mollis Nunc Mollis In</h1>
        <p>Lorem ipsum dolor sit amet consectetur. Sagittis amet condimentum enim sapien enim convallis sapien massa netus.</p>
        <div class="btn-group">
          <a href="#" class="btn btn-primary">Shop Now</a>
          <a href="#" class="btn btn-secondary">Learn More</a>
        </div>
      </div>
      <div class="col-md-6 text-right ps-md-4 position-relative">
        <!-- Owl Carousel Container -->
        <div class="owl-carousel owl-theme hero-carousel">
           {% for block in section.blocks %}
            {% if block.settings.product != blank %}
              <div class="item">
                <div class="hero-image-placeholder">
                  <img src="{{ block.settings.product.featured_image | img_url: 'master' }}" alt="{{ block.settings.product.title }}" width="400" height="auto"/>
                </div>
              </div>
            {% endif %}
          {% endfor %}

        </div>
        <div class="badge-new-collection">
          <span>New Collection 2023</span>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function(){
        $(".hero-carousel").owlCarousel({
          items: 1,
          loop: true,
          margin: 10,
          autoplay: false,
          autoplayTimeout: 3000,
          autoplayHoverPause: true,
          nav: false, // Set to true if navigation buttons are needed
          navText: ["<i class='fa fa-chevron-left'></i>","<i class='fa fa-chevron-right'></i>"],
          dots: false,
          responsive: {
            0:{
                items:1
            },
            600:{
                items:1
            },
            1000:{
                items:1
            }
          }
        });
  });
</script>
