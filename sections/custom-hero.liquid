
{% stylesheet %}
.section-hero {
    padding: 50px 0;
    max-height: calc(100vh - 160px); 
    height: auto;
}
@media (max-width: 768px){
  .section-hero {
    max-height: max-content !important;
  }
}

.section-hero h1 {
  font-size: 4.5rem; /* Adjust font size as needed */
  margin-bottom: 20px;
}

.section-hero p {
  font-size: 2rem;
  margin-bottom: 30px;
}



.image-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100px; 
  height: 100px; 
  background: url('path-to-your-icon.png') no-repeat center center;
  background-size: contain;
}

.badge-new-collection {
  position: absolute;
  bottom: -25px;
  left: 50%;
  transform: translateX(-50%);
  background-color: #fff;
  border-radius: 50%;
  width: 150px;
  height: 150px; 
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 0.9rem;
}

.btn-group .btn {
  margin-right: 10px;
}

.btn-group .btn:last-child {
  margin-right: 0;
}

/* Adjustments for responsiveness */
@media (max-width: 768px) {
  .hero-image-placeholder {
    margin-top: 30px;
  }

  .badge-new-collection {
    position: static;
    transform: none;
    margin: 20px auto;
  }
}
{% endstylesheet %}

<section class="section-hero color-{{ section.settings.scheme_selector }} d-flex align-items-center position-relative ">
  <div class="container-fluid me-md-0 pe-md-0">
    <div class="row me-md-0 p-0">
      <div class="col-md-6 justify-content-evenly col-md-6 page-width d-flex align-items-start flex-column page-width ">
        <h1>Lorem Ipsum Dolor Sit Amet Consectetur. Tempus Mollis Nunc Mollis In</h1>
        <p>Lorem ipsum dolor sit amet consectetur. Sagittis amet condimentum enim sapien enim convallis sapien massa netus.</p>
        <div class="btn-group">
          <a href="#" class="btn btn-primary">Shop Now</a>
          <a href="#" class="btn btn-secondary">Learn More</a>
        </div>
      </div>
      <div class="col-md-6 text-right ps-md-4 position-relative pe-md-0">
     
        {% assign products = section.blocks %}
        {% render "carousel-owl-two-items" , blocks:products %}

        
    
      </div>
    </div>
  </div>
</section>


