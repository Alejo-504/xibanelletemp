

<div class="discount-section-counter container-fluid py-5 color-{{ section.settings.scheme_selector }} overflow-hidden position-relative">
  <div class="row">
    <div class="col-lg-2 d-flex align-items-center justify-content-center ">
      <div class="discount-image" style="transform: rotate(9deg);margin-left: -100px;width: 100%; height: 440px; background-image: url('{{ section.settings.image_left | img_url: '600x' }}'); background-size: cover; background-position: center;">
        
      </div>
    </div>
    <div class="col-lg-8 text-center d-flex align-items-center flex-column justify-content-center">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.text }}</p>
      <div class="timer-app">
        <div id="countdownultimate-KT" class="hide-kt"></div>
      </div>
      <a href="{{ section.settings.button_url }}" class="btn btn-primary">{{ section.settings.button_label }}</a>
    </div>
    <div class="col-lg-2 d-flex align-items-center justify-content-center">
      <div class="discount-image" style="transform: rotate(350deg);margin-right: -28px;width: 100%; height: 400px; background-image: url('{{ section.settings.image_right | img_url: '600x' }}'); background-size: cover; background-position: center;">
        
      </div>
    </div>
  </div>
</div>
<style>
  .timer-app .kt-timer > div:not([class]){
    display:none!important;
    visibility:hidden;
    opacity:0!important;
    height:0px!important;
  }
  .discount-section-counter{
    background:rgb(var(--color-button));
    color: rgb(var(--color-button-text));
  }
  .discount-section-counter .btn-primary{
    background:rgb(var(--color-background));
    color:rgb(var(--color-foreground));
  }
  .discount-image {
    box-shadow: 10px 16px 32px 0px #0000001A;
  }
  .kt-timer .kt-card .kt-up, .kt-timer .kt-card .kt-down-parent{
    height: 53%;
  }
</style>
{% schema %}
{
  "name": "Custom Discount Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Deal Of The Monthly Flash Sale"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Get 50% off your order from $100 and check out all fashion collection during monthly flash sale"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "image_left",
      "label": "Left Side Image"
    },
    {
      "type": "image_picker",
      "id": "image_right",
      "label": "Right Side Image"
    },
    {
      "type": "select",
      "id": "scheme_selector",
      "label": "Color Scheme",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ],
      "default": "light"
    }
  ],
  "presets": [
    {
      "name": "Custom Discount",
      "category": "Custom Content"
    }
  ]
}
{% endschema %}