
<style>
  .timer-app .kt-timer > div:not([class]){
    display:none!important;
    visibility:hidden;
    opacity:0!important;
    height:0px!important;
  }
  .discount-section-counter{
    background:rgb(var(--color-button));
    color: rgb(var(--color-button-text));
  }
</style>

<div class="discount-section-counter container-fluid py-5 color-{{ section.settings.scheme_selector }}">
  <div class=" text-center page-width d-flex align-items-center flex-column justify-content-start">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.text }}</p>
    <div class="timer-app">
      <div id="countdownultimate-KT" class="hide-kt"></div>
    </div>
    <a href="{{ section.settings.button_url }}" class="btn btn-primary">{{ section.settings.button_label }}</a>
  </div>
</div>



{% schema %}
  {
    "name": "Custom Discount Section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "scheme_selector",
        "label": "Heading",
        "default": "Luxury For Every Lifestyle"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Luxury For Every Lifestyle"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Lorem ipsum dolor sit amet consectetur. Lacus proin sed proin etiam suspendisse et est anean nulla. Risus vel risus ligula elementum amet vel massa integer.</p>"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button URL",
        "default": "/collections/all"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label",
        "default": "Read More"
      }
    ],
    "presets": [
      {
        "name": "Custom Discount",
        "category": "custom"
      }
    ]
  }
  {% endschema %}

  