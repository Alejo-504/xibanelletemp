{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: calc({{ section.settings.padding_top }}px * 0.75);
  padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
}
.section-{{ section.id }} {
  height:auto;
}
@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

.faq i {
  -webkit-transition: all 0.1s ease-in-out;
  transition: all 0.1s ease-in-out;
}
.faq .card-body{
    font-size: 18px; 
 
}
.faq .card {
  border-radius: 0 !important;
  background: none;
  border: none;
  margin-top: 5px;
}

  .faq p{ 
    font-size:16px;
  }
  @media (max-width: 575px) {
 .faq .title-section:before {
    display: none;
  }
}
.faq .card-header {
    border: 1px solid #e7e7e700;
    -webkit-transition: background-color 0.3s linear;
    transition: background-color 0.3s linear;
    margin: 3px 0px;
    border-radius: var(--radius) !important;
    padding: 1rem 1.25rem;
}
 
.faq .card-header a {
  cursor: pointer;
}



.faq .card-body, .faq .collapse {
  border-radius: 0 !important;
  background: none;
}

#accordion li::before {
    content: "";
    display: inline-block;
    font-size: 50px;
    width: 11px;
    height: 11px;
    margin-right: 8px;
}
{%- endstyle -%}

  <section class=" section-{{ section.id }}-padding section-{{ section.id }}   m-0 faq my-section container-fluid position-relative color-{{ section.settings.color_scheme }}">
    <div class="page-width container-fluid">

      <div class="title-section pb-element">
          <h2>{{ section.settings.subtitle-section }}</h2>                      
         </div>
    </div>
    	

    <div id="accordion" class="page-width">
        {% for block in section.blocks %}
            {% if block.type == "faq-item" %}
        <div class="card">
            <div class="card-header" id="headingOne" data-toggle="collapse"
                        data-target="#collapse{{forloop.index}}" aria-expanded="true" aria-controls="collapseOne" role="button">
                <h5 class="mb-0 text-primary-small">
                    <a class=" hover_a " >
                        <i class=" fa fa-angle-down pr-3"></i> {{block.settings.question}}
                    </a>
                </h5>
            </div>

            <div id="collapse{{forloop.index}}" class="collapse" aria-labelledby="headingOne"
                data-parent="#accordion">
                <div class="card-body color-secondary text-primary-small">
                    {{block.settings.answer}}
                </div>
            </div>
        </div>
            {% endif %}
        {% endfor %}
    </div>
     {% for block in section.blocks %}
                    {% if block.type == 'button_action' %}
                        <div class=" w-100 justify-content-{{block.settings.align}} d-flex">    
                            <a style="text-transform:capitalize;" class="btn btn-primary mt-5 mx-0 hero" href="{{ block.settings.link }}">
                                {{ block.settings.label }}
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}  
  </section>

{% javascript %}

document.addEventListener("DOMContentLoaded", function () {


  $('.collapse').on('hidden.bs.collapse', function(evt) {
      let header = evt.currentTarget.parentNode.querySelector('.card-header');
      let i = evt.currentTarget.parentNode.querySelector('i');
      let a = evt.currentTarget.parentNode.querySelector('a');
      i.style.transform = "scaleY(1)";
      header.classList.remove('bg-primary');
  })
  $('.collapse').on('shown.bs.collapse', function(evt) {
      let header = evt.currentTarget.parentNode.querySelector('.card-header');
  
      let i = evt.currentTarget.parentNode.querySelector('i');
      let a = evt.currentTarget.parentNode.querySelector('a');
      i.style.transform = "scaleY(-1)";
      header.classList.add('bg-primary');
  })

});

{% endjavascript %}
{% schema %}
{
  "name": "Custom FAQs",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color scheme"
    },
    {
        "type": "text",
        "id": "subtitle-section",
        "label": "Title Section",
        "default": "Frequent Questions"
    },
	{
        "id": "align_title",
        "type": "select",
        "label": "Align title",
		"options": [
      	{
          "value": "center",
          "label": "center"
        },
        {
          "value": "end",
          "label": "right"
        },
		{
          "value": "start",
          "label": "left"
        }
      ]
    },
	
    {
      "type": "header",
      "content": "Custom Colors"
    },
    {
        "id": "background-color",
        "type": "color",
        "label": "Background Color"
    },
    {
      "type": "header",
      "content": "padding heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "padding bottom",
      "default": 52
    }
  ],
  "blocks":[
    {
        "type": "faq-item",
		"name": "Question",
        "settings": [
            {
                "type": "text",
                "id": "question",
                "label": "Question",
                "default": "Your question here"
            },
            {
                "type": "richtext",
                "id": "answer",
                "label": "Answer"
            }
        ]
    },
	{
            "name": "button_action",
            "type": "button_action",
			"limit": 1,
            "settings":[
                {
              
                    "type": "text",
                    "label": "Label Button",
                    "id": "label",
                    "default": "Read More"
                },
                {
     
                    "type": "url",
                    "label": "Link Button",
                    "id": "link"
                },
				{
                "id": "align",
                "type": "select",
                "label": "Align title",
                "options": [
                  {
                    "value": "center",
                    "label": "center"
                  },
                  {
                    "value": "end",
                    "label": "right"
                  },
                  {
                    "value": "start",
                    "label": "left"
                  }
      			]
    			}
            ]
        }
 ],
  "presets": [
    {
      "name": "Custom FAQs"
    }
  ]
}
{% endschema %}
