
<div class="grid principal">
  <div class="grid-item left" style="background-image: url('{{ section.settings.image_left | img_url: 'master' }}')">
    <div class="overlay">
      <p class="centered-text">{{ section.settings.text }}</p>
    </div>
  </div>
  <div class="grid-item">
    <img src="{{ section.settings.logo | img_url: 'master' }}" alt="" width="300" height="200" />
  </div>
  <div class="grid-item right" style="background-image: url('{{ section.settings.image_right | img_url: 'master' }}')">
    <div class="overlay">
      <p class="centered-text">{{ section.settings.text_2 }}</p>
    </div>
  </div>
</div>

<style>
.grid.principal{
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  height: 100vh;
  align-items: center;
  justify-items: center;
}
@media screen and (max-width: 768px) {
  .grid.principal{
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 1fr 1fr;
    height: 100vh;
  }
}
.grid-item {
  position: relative;
  height: 100%;
}
.overlay {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.centered-text {
  color: white;
  font-size: 2em;
}
.grid-item.left, .grid-item.right{
    background-size: cover;
    background-position: center;
}
</style>


{% schema %}
{
  "name": "Custom Banner Image",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image_left",
      "label": "Image Left"
    },
    {
      "type": "image_picker",
      "id": "image_right",
      "label": "Image Right"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "text_2",
      "label": "Text 2"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner Image"
    }
  ]
}
{% endschema %}
