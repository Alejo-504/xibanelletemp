

<style>
@keyframes logoenter {
  0% {
    transform: scale(0.5);
    opacity: 0;

    }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}
@keyframes fadeup {
  0% {
    transform: translateY(-50%);
    opacity: 0.5;

    }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}
@keyframes fadedown {
  0% {
    transform: translateY(50%);
    opacity: 0.5;

    }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}
.fadeup.left {
  animation: fadeup 1s linear forwards;
}
.fadedown.right {
  animation: fadedown 1s linear forwards;
}
main{
  height:100vh;
}

.grid-item.logoenter {
  animation: logoenter 1s ease-out forwards;
}
.principal{
  background:#e3dccf;
}
.grid.principal{
  display: grid;
  grid-template-columns: 0.75fr 1.5fr 0.75fr;
  height: 100vh;
  align-items: center;
  justify-items: center;
}
.logo{
  height: auto;
  overflow: hidden; /* Para manejar cualquier desbordamiento durante la animaci√≥n */
  display: flex;
  justify-content: center;
  align-items: center;
}
@media screen and (max-width: 768px) {
  .grid.principal{
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 1fr 1fr;
    height: 100vh;
  }
   .logo img{
    width: 100%;
    height: auto;
   }
}
.font-primary{
  font-weight:900;
}
.grid-item {
  position: relative;
  height: 100%;
  width:100%;
}
.overlay {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.centered-text {
  color: white;
  font-size: 2em;
}
.grid-item.left, .grid-item.right{
    background-size: cover;
    background-position: center;
}
.principal a{
    text-decoration: none;
}
.principal a:hover{
    background-size: 110%;
    transition: background-size 0.5s ease-in-out;
}



</style>


<div class="grid principal">
  <a class="grid-item left fadeup"  href="{{ collections[section.settings.collection].url }}">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        {% for product in collections[section.settings.collection].products limit:5 %}
          <div class="carousel-item {% if forloop.first %}active{% endif %}" style="background-image: url('{{ product.featured_image | img_url: 'master' }}')"></div>
        {% endfor %}
      </div>
      <div class="overlay">
        <p class="centered-text font-primary">{{ section.settings.text }}</p>
      </div>
    </div>
  </div>
  <div class="grid-item logo logoenter">
    <img src="{{ section.settings.logo | img_url: 'master' }}" alt=""  width="100%" height="auto"/>
  </div>
    <a class="grid-item right fadedown" href="{{ collections[section.settings.collection_2].url }}">
        <div id="carouselExampleIndicators2" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            {% for product in collections[section.settings.collection_2].products limit:5 %}
            <div class="carousel-item {% if forloop.first %}active{% endif %}" style="background-image: url('{{ product.featured_image | img_url: 'master' }}')"></div>
            {% endfor %}
        </div>
        <div class="overlay">
            <p class="centered-text font-primary">{{ section.settings.text_2 }}</p>
        </div>
        </div>
    </a>
</div>


{% schema %}
{
  "name": "Custom Banner Image",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "collection",
      "id": "image_left",
      "label": "Image Left"
    },
    {
      "type": "collection",
      "id": "image_right",
      "label": "Image Right"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "text_2",
      "label": "Text 2"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner Image"
    }
  ]
}
{% endschema %}
