
{% stylesheet %}
    @keyframes logoenter {
      0% {
        transform: scale(0.5);
        opacity: 0;
    
        }
      100% {
        transform: scale(1);
        opacity: 1;
      }
    }
    @keyframes fadeup {
      0% {
        transform: translateY(-50%);
        opacity: 0.5;
    
        }
      100% {
        transform: translateY(0);
        opacity: 1;
      }
    }
    @keyframes fadedown {
      0% {
        transform: translateY(50%);
        opacity: 0.5;
    
        }
      100% {
        transform: translateY(0);
        opacity: 1;
      }
    }
    .fadeup.left {
      animation: fadeup 1s linear forwards;
    }
    .fadedown.right {
      animation: fadedown 1s linear forwards;
    }
    main{
      height:100vh;
    }
    
    .grid-item.logoenter {
      animation: logoenter 1s ease-out forwards;
    }
    .principal{
      background:#e3dccf;
    }
    .grid.principal{
      display: grid;
      grid-template-columns: 0.75fr 1.5fr 0.75fr;
      height: 100vh;
      align-items: center;
      justify-items: center;
    }
    .logo{
      height: auto;
      overflow: hidden; /* Para manejar cualquier desbordamiento durante la animaci√≥n */
      display: flex;
      justify-content: center;
      align-items: center;
    }
   
    .font-primary{
      font-weight:900;
    }
    .grid-item {
      position: relative;
      height: 100%;
      width:100%;
    }
    .overlay {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      background: rgba(0, 0, 0, 0.5);
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .centered-text {
      color: white;
      font-size: 2em;
    }
    .grid-item.left, .grid-item.right{
        background-size: cover;
        background-position: center;
    }
    .principal a{
        text-decoration: none;
    }
    .principal a img{
        object-fit: cover !important;
        object-position: center !important;

    }
    .principal a:hover img{
        /* zoom-in */
        transform: scale(1.1);
        transition: transform 0.5s ease-in-out;
    }
    .principal a:hover .overlay{
        /* sombras interiores */
        box-shadow: inset 0 0 0 1000px rgba(0,0,0,0.5);
        transition: all 0.5s ease-in-out;

        
    }
    .principal a:hover .centered-text{
        /* sombras interiores */
        transition: all 0.5s ease-in-out;
        transform: scale(1.2);
        z-index: 100;

        
    }
    .container-background{
        position: relative;
        overflow: hidden;
    }
    @media screen and (max-width: 768px) {
      .grid.principal{
        grid-template-columns: 1fr;
        grid-template-rows: 34.7vh 30vh 34.6vh;
        height: 100vh;
      }
       .logo img{
        width: 100%;
        height: auto;
       }
       .grid-item{
        width: 100%;
        height: 100%;
       }
    }
    body{
        overflow-x: hidden;
        overflow-y: hidden;
    }
    {% endstylesheet %}
    
    <div class="grid principal">
    
        <a class="grid-item left fadeup"  href="{{section.settings.link_1}}" >
          <div class="container-background h-100 ">
            <img src="{{ section.settings.background_image | img_url: 'master' }}" alt=""  width="100%" height="100%"/>
          </div>
            <div class="overlay">
                    <p class="centered-text font-primary">{{ section.settings.text }}</p>
            </div>
        </a>
        <div class="grid-item logo logoenter">
            <img src="{{ section.settings.logo | img_url: 'master' }}" alt=""  width="100%" height="auto"/>
        </div>
        <a class="grid-item right fadedown" href="{{section.settings.link_2 }}" >
            <div class="container-background h-100">
                <img src="{{ section.settings.background_image2 | img_url: 'master' }}" alt=""  width="100%" height="100%"/>
            </div>
           
            <div class="overlay">
                <p class="centered-text font-primary">{{ section.settings.text_2 }}</p>
            </div>
        </a>
    
    </div>
    
    
    
    
