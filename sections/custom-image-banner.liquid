
<div class="grid principal">
  <div class="grid-item left" style="background-image: url('{{ section.settings.image_left | img_url: 'master' }}')">
    <div class="overlay">
      <p class="centered-text">{{ section.settings.text }}</p>
    </div>
  </div>
  <div class="grid-item">
    <img src="{{ section.settings.logo | img_url: 'master' }}" alt="">
  </div>
  <div class="grid-item right" style="background-image: url('{{ section.settings.image_right | img_url: 'master' }}')">
    <div class="overlay">
      <p class="centered-text">{{ section.settings.text_2 }}</p>
    </div>
  </div>
</div>



{% schema %}
{
  "name": "Custom Banner Image",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image_left",
      "label": "Image Left"
    },
    {
      "type": "image_picker",
      "id": "image_right",
      "label": "Image Right"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "text_2",
      "label": "Text 2"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner Image"
    }
  ]
}
{% endschema %}
