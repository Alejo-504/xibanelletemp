
<div class="grid principal">
  <div class="grid-item left" style="background-image: url('{{ section.settings.image_left | img_url: 'master' }}')">
    <div class="overlay">
      <p class="centered-text font-primary">{{ section.settings.text }}</p>
    </div>
  </div>
  <div class="grid-item logo logoenter">
    <img src="{{ section.settings.logo | img_url: 'master' }}" alt=""  width="450" height="300"/>
  </div>
  <div class="grid-item right" style="background-image: url('{{ section.settings.image_right | img_url: 'master' }}')">
    <div class="overlay">
      <p class="centered-text font-primary">{{ section.settings.text_2 }}</p>
    </div>
  </div>
</div>

<style>
@keyframes logoenter {
  0% {
    transform: translateY(-100vh) rotate(0deg);
    opacity: 0;
    filter: blur(5px);
    clip-path: circle(0% at 50% 50%);
  }
  50% {
    transform: translateY(-50vh) rotate(180deg);
    opacity: 0.5;
    filter: blur(2.5px);
    clip-path: circle(50% at 50% 50%);
  }
  80% {
    opacity: 0.8;
    filter: blur(1px);
    clip-path: circle(75% at 50% 50%);
  }
  100% {
    transform: translateY(0) rotate(360deg);
    opacity: 1;
    filter: blur(0);
    clip-path: circle(100% at 50% 50%);
  }
}

.grid-item.logoenter {
  animation: logoenter 1.5s ease-out forwards;
}
  .principal{
    background:#e3dccf;
  }
.grid.principal{
  display: grid;
  grid-template-columns: 0.75fr 1.5fr 0.75fr;
  height: 100vh;
  align-items: center;
  justify-items: center;
}
  .logo{
    display:flex;
    align-items:center;
    justify-content:center;
    
  }
@media screen and (max-width: 768px) {
  .grid.principal{
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 1fr 1fr;
    height: 100vh;
  }
}
.font-primary{
  font-weight:900;
}
.grid-item {
  position: relative;
  height: 100%;
  width:100%;
}
.overlay {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.centered-text {
  color: white;
  font-size: 2em;
}
.grid-item.left, .grid-item.right{
    background-size: cover;
    background-position: center;
}



</style>


