{% schema %}
  {
    "name": "Custom About Home",
    "settings": [
      {
        "type": "color_scheme",
        "id": "scheme_selector",
        "label": "Heading",
        "default": "Luxury For Every Lifestyle"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Luxury For Every Lifestyle"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Lorem ipsum dolor sit amet consectetur. Lacus proin sed proin etiam suspendisse et est anean nulla. Risus vel risus ligula elementum amet vel massa integer.</p>"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button URL",
        "default": "/collections/all"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label",
        "default": "Read More"
      }
    ],
    "presets": [
      {
        "name": "Custom About Home",
        "category": "custom"
      }
    ]
  }
  {% endschema %}
  
  <div class="split-section py-5  color-{{ section.settings.scheme_selector }}">
    <div class="container-fluid page-width">
      <div class="row row-content d-flex align-items-center">
        <div class="image-content  col-md-7 d-flex flex-column align-items-start px-5 justify-content-center" style="background-image: url({{ section.settings.image | img_url: 'master' }});">
          <h2>{{ section.settings.heading }}</h2>
          
          <a href="{{ section.settings.button_url }}" class="btn btn-primary">{{ section.settings.button_label }}</a>
        </div>
        <div class="text-content col-md-5 px-md-5" >
          <div class="overlay-text">
            <h2>About Us</h2>
            <p>{{ section.settings.text }}</p>
          </div>
        </div>
      </div>
      <div class="row icons-row px-5">
        <div class="col-md-3 d-grid" style="grid-template-columns: 50px 1fr;">
          <i class="fa fa-truck"></i>
          <div class="overlay-text d-flex align-items-start flex-column">
            <strong>Free Shipping</strong>
            <p>Free shipping on all US order or order above $200</p>
          </div>
        </div>
        <div class="col-md-3 d-grid" style="grid-template-columns: 50px 1fr;">
          <i class="fa fa-truck"></i>
          <div class="overlay-text d-flex align-items-start flex-column">
            <strong>Free Shipping</strong>
            <p>Free shipping on all US order or order above $200</p>
          </div>
        </div>
        <div class="col-md-3 d-grid" style="grid-template-columns: 50px 1fr;">
          <i class="fa fa-truck"></i>
          <div class="overlay-text d-flex align-items-start flex-column">
            <strong>Free Shipping</strong>
            <p>Free shipping on all US order or order above $200</p>
          </div>
        </div>
        <div class="col-md-3 d-grid" style="grid-template-columns: 50px 1fr;">
          <i class="fa fa-truck"></i>
          <div class="overlay-text d-flex align-items-start flex-column">
            <strong>Free Shipping</strong>
            <p>Free shipping on all US order or order above $200</p>
          </div>
        </div>
    </div>
  </div>
</div>

  <style>
    .row-content{
      border: solid 1px white;
      margin-bottom: 50px;

    }
    .image-content{
      height: 370px;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }
    .split-section .icons-row p{
      font-size: 0.95rem;
    }
    .split-section .icons-row i{
      font-size:40px;
    }
    .split-section{
      background:rgb(var(--color-background));
    }
  </style>