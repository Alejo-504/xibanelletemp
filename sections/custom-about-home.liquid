{% schema %}
{
  "name": "Split Image & Text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Luxury For Every Lifestyle"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Lorem ipsum dolor sit amet consectetur. Lacus proin sed proin etiam suspendisse et est anean nulla. Risus vel risus ligula elementum amet vel massa integer.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Read More"
    }
  ]
}
{% endschema %}

{% stylesheet %}
<style>
 
</style>
{% endstylesheet %}

<div class="split-section">
  <div class="text-content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.text }}</p>
    <a href="{{ section.settings.button_url }}" class="btn">{{ section.settings.button_label }}</a>
  </div>
  <div class="image-content">
    <div class="overlay-text">
      <h2>About Us</h2>
    </div>
  </div>
</div>