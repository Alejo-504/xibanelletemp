<div class="body-card d-grid" style="
grid-template-columns:2fr 1fr;
align-items: center;
justify-items: start;
margin-top: 15px;
text-align: start;
">


<div class="d-flex flex-column align-items-start">
<div class="title-card">
<strong>{{ product.title }}</strong>
</div>
{% if product.available %}

{% else %}

<div class="available-card">
  <span class="badge" style="background:#a1a1a1;">Unavailable</span>
</div>

{% endif %}

<div class="description-card">
<p style="font-size:1.4rem;padding-right:25px;">
  {{ product.description | strip_html | truncatewords: 30 }}
</p>
</div>
<div class="price-card">
{% if product.compare_at_price > product.price %}
  <span class="price-original" style="text-decoration: line-through;color:red!important;">
    {{ product.compare_at_price | money }} </span
  >&nbsp;
  <span class="price-sale">
    {{ product.price | money }}
  </span>
{% else %}
  {{ product.price | money }}
{% endif %}
</div>
<div class="btn-group mt-5 d-flex align-items-center">
   <div class="swym-button swym-add-to-wishlist  me-3 swym-heart"
          id="swym-button-{{ product.id }}-{{ random_value }}"
          data-with-epi="true"
          data-swaction="addToWishlist"
          data-product-id="{{ product.id }}"

          data-variant-id="{{ product.variants[0].id }}"
          data-product-url="{{ shop.url }}{{ product.url }}"
          data-status="not_added"
          >
          <i class="fa fa-heart" style="font-size:20px;"></i>
        </div>
      <style>
        #swym-button-{{ product.id }}-{{ random_value }}[data-status="not_added"] i {
          color: #a1a1a1;
        }
        #swym-button-{{ product.id }}-{{ random_value }}[data-status="adding"] i {
          color: #d25d5d; 
        }
      </style>
<a class="btn btn-primary" href="{{ product.url }}" style="z-index:2;color:white;" >
  
 <span>{% if product.available %}
  Get Now 
  {% else %}
  View Product
  {% endif %}
  </span> 
  
</a>
</div>
</div>

<a  href="{{ product.url }}"
  class="header-card" style="
  height: 250px;
  width: 250px;
  overflow: hidden;"
>
<img
src="{{ product.featured_image | img_url: 'large' }}"
alt="{{ product.featured_image.alt | escape }}"
width="100%"
height="200"
style="border-radius:1px;width:100%;height:100%;object-fit:cover"
>
</a>

</div>
