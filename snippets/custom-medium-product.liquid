<div class="body-card d-grid" style="
grid-template-columns:1.2fr 1fr;
align-items: center;
justify-items: start;
text-align: start;
">

<a  href="{{ product.url }}" 
class="header-card" style="
  width: 90%;
  overflow: hidden;
  color: white;
  text-decoration: none;
  "
>
<img
src="{{ product.featured_image | img_url: 'large' }}"
alt="{{ product.featured_image.alt | escape }}"
width="100%"
height="200"
style="border-radius:1px;width:100%;height:100%;object-fit:cover"
>
</a>
  
<div class="d-flex flex-column align-items-start">
<div class="title-card">
<strong>{{ product.title }}</strong>
</div>
{% if product.available %}

{% else %}

<div class="available-card">
  <span class="badge" style="background:#a1a1a1;">Unavailable</span>
</div>

{% endif %}
<div class="description-card">
<p style="font-size:1.4rem;padding-right:25px;">
    {{ product.description | strip_html | truncatewords: 10 }}
</p>
</div>
<div class="price-card">
{% if product.compare_at_price > product.price %}
  <span class="price-original" style="text-decoration: line-through;color:red!important;">
    {{ product.compare_at_price | money }} </span
  >&nbsp;
  <span class="price-sale">
    {{ product.price | money }}
  </span>
{% else %}
  {{ product.price | money }}
{% endif %}
</div>
  <div class="btn-group mt-5 d-flex align-items-center">
       {% assign random_value =  "now" | date: "%N" %}

       <div class="swym-button swym-add-to-wishlist  me-3 swym-heart"
          id="swym-button-{{ product.id }}-{{ random_value }}"
          data-with-epi="true"
          data-swaction="addToWishlist"
          data-product-id="{{ product.id }}"

          data-variant-id="{{ product.variants[0].id }}"
          data-product-url="{{ shop.url }}{{ product.url }}"
          data-status="not_added"
          >
          <i class="fa fa-heart" style="font-size:20px;"></i>
        </div>
      <style>
        #swym-button-{{ product.id }}-{{ random_value }}[data-status="not_added"] i {
          color: #a1a1a1;
        }
        #swym-button-{{ product.id }}-{{ random_value }}[data-status="adding"] i {
          color: #d25d5d; 
        }
      </style>
      <script>
        document.addEventListener("DOMContentLoaded", function () {
        

          setTimeout(function () {
            var swymButton = document.getElementById("swym-button-{{ product.id }}-{{ random_value }}");
         

              let classesInitial = swymButton.classList;
              console.log(classesInitial);
              if (classesInitial.contains("swym-added")) {
                swymButton.setAttribute("data-status", "adding");
                console.log("added");
              } else {
                swymButton.setAttribute("data-status", "not_added");
                console.log("not added");
              }

              swymButton.querySelector("i").addEventListener("click", function () {
                console.log("clicked");

                if (swymButton.getAttribute("data-status") == "not_added") {
                  swymButton.setAttribute("data-status", "adding");
                  console.log("adding 2");
                } else {
                  swymButton.setAttribute("data-status", "not_added");
                  console.log("not added 2");
                }
              });


          }, 5000);

        });

      </script>
    <a class="btn btn-primary" href="{{ product.url }}" style="z-index:2;color:white;">
     <span>{% if product.available %}
      Get Now
      {% else %}
        View Product
      {% endif %}
      </span> 
    </a>
  </div>
</div>



</div>
